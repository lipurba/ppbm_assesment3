<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomsheet"
    android:background="@color/cream">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardBackgroundColor="@color/cream"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="30dp"
        android:id="@+id/A_crd_1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/gambar9"
            >

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/A_crd_1"
        android:text="Motor adalah alat transportasi yang telah menjadi bagian penting dalam kehidupan sehari-hari kita. Aplikasi VICTORY merupakan inovasi yang memberikan kemudahan dan kenyamanan dalam menggunakan motor anda sehari-hari."
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:id="@+id/A_txt_1"/>

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/A_back1"
        android:layout_below="@id/A_txt_1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:text="BACK"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        />

</RelativeLayout>